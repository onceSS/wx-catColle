/* pages/user/user.wxss */

.user-area {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  height: 500rpx;
  background-color: #ff9800;
}
.user-avatar-view, .user-info-view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 60rpx;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
  border: solid white;
}
.user-text {
  color: white;
  font-size: 40rpx;
}
.auth-btn {
  max-width: 280rpx;
}

.down-list-item {
  margin: 40rpx 0;
  padding-left: 60rpx;
  background-color: white;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  color: #616161;
}
